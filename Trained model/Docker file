# Use an official Python runtime as the base image
FROM python:3.9-slim

# Set the working directory in the container
Anomally-based-IDS-using-machine-learning/Trained model
/

# Copy the Python script and model file to the working directory
Anomally-based-IDS-using-machine-learning/Trained model
/RF python script.py
COPY your_model.pkl /app/your_model.pkl

# Install the required dependencies
RUN pip install numpy scikit-learn

# Run the Python script when the container launches
CMD ["python", "/Anomally-based-IDS-using-machine-learning/Trained model
/RF python script.py"]
